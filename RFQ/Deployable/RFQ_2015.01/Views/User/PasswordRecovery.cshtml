@model PasswordRecoveryModel
@using SSG.Web.Models.User;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<div class="page password-recovery-page">
    <div class="page-header">
        <h2>@T("Account.PasswordRecovery")</h2>
    </div>
    <div class="page-body">
        @if (!String.IsNullOrEmpty(Model.Result))
        { 
            <div class="alert alert-block alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>@T("Common.Notification")</h4>
                <p>@Model.Result</p>
            </div>
        }
        @using (Html.BeginHorizontalForm())
        {
            <p class="text-info">@T("Account.PasswordRecovery.Tooltip")</p>
            <div class="control-group">
                @Html.LabelFor(m => m.Email, true)
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-envelope"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "input-large", id = "emailIcon", placeholder = T("Account.Login.Fields.Email") })
                        @Html.RequiredHint()
                        @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "help-inline" })
                    </div>
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.EmployeeId, true)
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                        @Html.TextBoxFor(m => m.EmployeeId, new { @class = "employeeid input-large"})
                        @Html.RequiredHint()
                        @Html.ValidationMessageFor(m => m.EmployeeId, string.Empty, new { @class = "help-inline" })
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-actions">
                <input type="submit" name="send-email" class="btn btn-primary password-recovery-button" value="@T("Account.PasswordRecovery.RecoverButton")" />
            </div>
        }
    </div>
</div>
