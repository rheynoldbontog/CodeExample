@model CurrencySelectorModel
@using SSG.Web.Models.Common;
@if (Model.AvailableCurrencies.Count > 1)
{
    var currencies = Model.AvailableCurrencies.Select(x => new SelectListItem
    {
        Text = x.Name,
        Value = @Url.RouteUrl("ChangeCurrency", new { usercurrency = x.Id }),
        Selected = x.Id.Equals(Model.CurrentCurrency.Id)
    });
    
    @Html.DropDownList("userCurrency", currencies, new { onchange = "setLocation(this.value);", @class = "span1" })
}